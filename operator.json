{
  "name": "Bar plot",
  "description": "Generate advanced barplots as PNG files.",
  "tags": ["data visualisation", "plot"],
  "authors": ["tercen"],
  "urls": ["https://github.com/tercen/barplot_operator"],
  "properties": [
      {
    "kind": "EnumeratedProperty",
    "name": "format",
    "defaultValue": "image/png",
    "values": [
      "image/png",
      "image/svg+xml"
    ],
    "description": "Indicates which format to use."
  },
  {
    "kind": "DoubleProperty",
    "name": "plot.width",
    "defaultValue": 750,
    "description": "Plot width (pixels)"
  },
  {
    "kind": "DoubleProperty",
    "name": "plot.height",
    "defaultValue": 750,
    "description": "Plot height (pixels)"
  },
  {
    "kind": "BooleanProperty",
    "name": "jitter",
    "defaultValue": false,
    "description": "Indicates whether individual data points should be added to the graph."
  },
  {
    "kind": "DoubleProperty",
    "name": "dot.size",
    "defaultValue": 0.5,
    "description": "Data point size."
  },
  {
    "kind": "EnumeratedProperty",
    "name": "average.type",
    "defaultValue": "Mean",
    "values": [
      "Mean",
      "Median"
    ],
    "description": "Indicates which average kind should be computed."
  },
  {
    "kind": "EnumeratedProperty",
    "name": "error.type",
    "defaultValue": "None",
    "values": [
      "None",
      "Standard Deviation",
      "Custom",
      "95% Confidence Interval"
    ],
    "description": "Indicates which metric should be used for error bars. Is Custom is selected, error bars specified in the input projection will be used."
  },
  {
    "kind": "EnumeratedProperty",
    "name": "bar.position",
    "defaultValue": "dodge",
    "values": [
      "dodge",
      "stack",
      "fill"
    ],
    "description": "Bar position - any of dodge, stack or fill."
  },
  {
    "kind": "DoubleProperty",
    "name": "bar.width",
    "defaultValue": 0.25,
    "description": "Error bar width."
  },
  {
    "kind": "DoubleProperty",
    "name": "dodge.width",
    "defaultValue": 1.1,
    "description": "The amount to dodge in the x direction."
  },
  {
    "kind": "DoubleProperty",
    "name": "jitter.width",
    "defaultValue": 0.05,
    "description": "Jitter width."
  },
  {
    "kind": "StringProperty",
    "name": "xlab",
    "defaultValue": "",
    "description": "X axis label."
  },
  {
    "kind": "StringProperty",
    "name": "ylab",
    "defaultValue": "",
    "description": "Y axis label."
  },
  {
    "kind": "StringProperty",
    "name": "title",
    "defaultValue": "",
    "description": "Plot title."
  },
  {
    "kind": "StringProperty",
    "name": "subtitle",
    "defaultValue": "",
    "description": "Plot subtitle."
  },
  {
    "kind": "StringProperty",
    "name": "caption",
    "defaultValue": "",
    "description": "Plot caption."
  },
  {
    "kind": "EnumeratedProperty",
    "name": "color.palette",
    "defaultValue": "Set1",
    "values": [
      "Accent",
      "Dark2",
      "Paired",
      "Pastel1",
      "Pastel2",
      "Set1",
      "Set2",
      "Set3"
    ],
    "description": "Color palette (ColorBrewer's Qualitative palettes)."
  },
  {
    "kind": "EnumeratedProperty",
    "name": "theme",
    "defaultValue": "light",
    "values": [
      "gray",
      "bw",
      "linedraw",
      "light",
      "dark",
      "minimal",
      "classic",
      "void"
    ],
    "description": "Theme (from ggplot2)."
  },
  {
    "kind": "BooleanProperty",
    "name": "wrap.1d",
    "defaultValue": true,
    "description": "Wraps a 1d sequence of panels into 2d if no row or column factor is specified."
  }
  ]
}

